                android:id="@+id/txt_imageButtonPmmakepay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true" />
        </LinearLayout>


        <TextView
            android:layout_margin="5dp"
            android:id="@+id/txt_custserv2"
            android:layout_width="match_parent"
            android:gravity="center|left"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/txt_layout_custserv12"
            >
            <TextView
                android:id="@+id/txt_custserv12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="center|start"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true" />
            <ImageButton
                android:id="@+id/txt_imageButtonCustserv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/txt_layout_custserv22"
            >
            <TextView
                android:id="@+id/txt_custserv22"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_gravity="center|start"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:padding="5dp"
                android:clickable="true" />
